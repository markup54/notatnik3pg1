<Window x:Class="Liczby_Zapis_odczyt_3p.WindowFont"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Liczby_Zapis_odczyt_3p"
        mc:Ignorable="d"
        Title="WindowFont" Height="250" Width="200">
    <UniformGrid Columns="2">
        <TextBlock>Wybierz styl czcionki</TextBlock>
        <ComboBox x:Name="stylComboBox" SelectedIndex="0">
            <ComboBoxItem>normalna</ComboBoxItem>
            <ComboBoxItem>pogrubiona</ComboBoxItem>
            <ComboBoxItem>pochylona</ComboBoxItem>
            <ComboBoxItem>pogrubiona i pochylona</ComboBoxItem>
        </ComboBox>
        <TextBlock>Rozmiar czcionki</TextBlock>
        <ListView ItemsSource="{Binding DostepneRozmiary}"
                  SelectedIndex="3"
                  />
        <Label></Label>
        <Button>Zmien</Button>
    </UniformGrid>
</Window>
